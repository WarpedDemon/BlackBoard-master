<p id="notice"><%= notice %></p>

<h1>Image Uploader</h1>

<%= link_to 'New Item', new_item_path, class: 'btn btn-success' %>

<table class="table table-hover">
  <thead>
    <tr class="thead-inverse">
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr scope="row">
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= image_tag(item.picture, class: "menu_icon") %></td>
        <td><%= link_to 'Show', item_path(item), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_item_path(item), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', item,
                method: :delete,
                data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
