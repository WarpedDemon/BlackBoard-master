
<h1>Your Classes</h1>
<%= link_to 'New Class', new_lecture_path, class: 'btn btn-success' %>
<table class="table table-hover">
  <thead class="thead-inverse">
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Room</th>
      <th>Time Slot</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody >
  <% @lectures.each do |lecture| %>
    <tr scope="row">
      <td><%= lecture.title %></td>
      <td><%= lecture.text %></td>
      <td><%= lecture.roomNum %></td>
      <td><%= lecture.timeSlot %></td>

      <td><%= link_to 'Show', lecture_path(lecture), class: 'btn btn-primary' %></td>
      <td><%= link_to 'Edit', edit_lecture_path(lecture), class: 'btn btn-warning' %></td>
      <td><%= link_to 'Destroy', lecture_path(lecture), class: 'btn btn-danger',
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  </tbody>
  <% end %>
</table>
