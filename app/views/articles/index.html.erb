
<h1>Your Blog</h1>
<%= link_to 'New Blog', new_article_path, class: 'btn btn-success' %>
<table class="table table-hover">
  <tr class="thead-inverse">
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr scope="row">
      <td><%= article.title %></td>
      <td><%= article.text %></td>

      <td><%= link_to 'Show', article_path(article), class: 'btn btn-primary' %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %></td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
    </tr>
  <% end %>
</table>
